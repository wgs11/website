<tr class="<%= cycle('list_line_odd', 'list_line_even') %>" style="border-style:solid;">
  <td>
    <%= image_tag(hero.image_url, class: 'list_image') %>
  </td>
  <td class="thing_description">
    <dl>
      <div class="c100 p<%=ratio(hero)%>">
        <span><%=ratio(hero)%>%</span>
        <div class="slice">
          <div class="bar"></div>
          <div class="fill"></div>
        </div>
      </div>
    </dl>
    <% if Rails.env.production? %>
    <%= button_to 'add', hero_add_path(hero), method: :put, remote: true %>
      <% end %>
  </td>
  <% if Rails.env.production? %>
  <td class="list_actions">
    <%= link_to 'Show', hero %><br/>
    <%= link_to 'Edit', edit_hero_path(hero) %><br/>
    <%= link_to 'Destroy', hero, method: :delete,
                data: { confirm: 'Are you sure?' } %>
  </td>
    <% end %>
</tr>